<ul class="nav nav-tabs">
  <li class="active">
    <%= link_to "Todos", atividades_path %>
  </li>
  <li>
    <%= link_to "Cadastrar", new_atividade_path %>
  </li>
</ul>

<div class="tab-content">
  <div class="active tab-pane">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Imagem</th>
          <th>Nome</th>
          <th>Descrição</th>
          <th><%= t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>

      <tbody>
        <% @atividades.each do |atividade| %>
        <tr>
          <td><%= link_to atividade.id, atividade_path(atividade) %></td>
          <td><%= link_to (image_tag atividade.imagem.url(:thumb)), atividade_path(atividade) %></td>
          <td><%= atividade.nome %></td>
          <td><%= atividade.descricao %></td>
          <td> <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_atividade_path(atividade), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), atividade_path(atividade), :method => :delete,
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) },
          :class => 'btn btn-mini btn-danger' %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
