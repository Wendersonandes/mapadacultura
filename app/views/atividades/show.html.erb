<ul class="nav nav-tabs">
  <li>
    <%= link_to "Todos", atividades_path %>
  </li>
  <li>
    <%= link_to "Cadastrar", new_atividade_path %>
  </li>
  <li class="active">
    <%= link_to @atividade.nome %>
  </li>
</ul>

<div class="tab-content">
  <div class="active tab-pane">
    <dl class="dl-horizontal">
      <dt>
        <strong>Nome:</strong>
      </dt>
      <dd>
        <%= @atividade.nome %>&nbsp;
      </dd>
      <dt>
        <strong>Descrição:</strong>
      </dt>
      <dd>
        <%= @atividade.descricao %>&nbsp;
      </dd>
      <dt>
        <strong>Imagem:</strong>
      </dt>
      <dd>
        <%= link_to (image_tag @atividade.imagem.url(:thumb)), @atividade.imagem.url %>&nbsp;
      </dd>
    </dl>

    <% if user_signed_in? %>
    <% if current_user.admin? %>
    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")), atividades_path, :class => 'btn'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_atividade_path(@atividade), :class => 'btn' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")), atividade_path(@atividade), :method => 'delete',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) },
      :class => 'btn btn-danger' %>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
