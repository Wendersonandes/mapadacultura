<ul class="nav nav-tabs">
  <li class="active">
    <%= link_to "Todos", tipo_entidades_path %>
  </li>
  <li>
    <%= link_to "Cadastrar", new_tipo_entidade_path %>
  </li>
</ul>

<div class="tab-content">
  <div class="active tab-pane">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Imagem</th>
          <th>Nome</th>
          <th>Descrição</th>
          <th><%= t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>

      <tbody>
        <% @tipo_entidades.each do |tipo_entidade| %>
        <tr>
          <td><%= link_to tipo_entidade.id, tipo_entidade_path(tipo_entidade) %></td>
          <td><%= link_to (image_tag tipo_entidade.imagem.url(:thumb)), tipo_entidade_path(tipo_entidade) %></td>
          <td><%= tipo_entidade.nome %></td>
          <td><%= tipo_entidade.descricao %></td>
          <td> <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_tipo_entidade_path(tipo_entidade), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), tipo_entidade_path(tipo_entidade), :method => :delete,
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) },
          :class => 'btn btn-mini btn-danger' %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
