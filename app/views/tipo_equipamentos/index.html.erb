<ul class="nav nav-tabs">
  <li class="active">
    <%= link_to "Todos", tipo_equipamentos_path %>
  </li>
  <li>
    <%= link_to "Cadastrar", new_tipo_equipamento_path %>
  </li>
</ul>

<div class="tab-content">
  <div class="active tab-pane">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Imagem</th>
          <th>Nome</th>
          <th>Descrição</th>
          <th><%= t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>

      <tbody>
        <% @tipo_equipamentos.each do |tipo_equipamento| %>
        <tr>
          <td><%= link_to tipo_equipamento.id, tipo_equipamento_path(tipo_equipamento) %></td>
          <td><%= link_to (image_tag tipo_equipamento.imagem.url(:thumb)), tipo_equipamento_path(tipo_equipamento) %></td>
          <td><%= tipo_equipamento.nome %></td>
          <td><%= tipo_equipamento.descricao %></td>
          <td> <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_tipo_equipamento_path(tipo_equipamento), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), tipo_equipamento_path(tipo_equipamento), :method => :delete,
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) },
          :class => 'btn btn-mini btn-danger' %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
