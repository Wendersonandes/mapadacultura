<ul class="nav nav-tabs">
  <li>
    <%= link_to "Todos", tipos_path %>
  </li>
  <li>
    <%= link_to "Cadastrar", new_tipo_path %>
  </li>
  <li class="active">
    <%= link_to @tipo.nome %>
  </li>
</ul>

<div class="tab-content">
  <div class="active tab-pane">
    <dl class="dl-horizontal">
      <dt>
        <strong>Nome:</strong>
      </dt>
      <dd>
        <%= @tipo.nome %>&nbsp;
      </dd>
      <dt>
        <strong>Descrição:</strong>
      </dt>
      <dd>
        <%= @tipo.descricao %>&nbsp;
      </dd>
    </dl>

    <% if user_signed_in? %>
    <% if current_user.admin? %>
    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")), tipos_path, :class => 'btn'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_tipo_path(@tipo), :class => 'btn' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")), tipo_path(@tipo), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) }, :class => 'btn btn-danger' %>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
