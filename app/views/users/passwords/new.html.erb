<ul class="nav nav-tabs">
  <li><%= link_to "Logar", new_session_path(resource_name) %></li>
  <li><%= link_to "Cadastrar", new_registration_path(resource_name) %></li>
  <li class="active"><%= link_to "Esqueceu a Senha?", new_password_path(resource_name) %></li>
</ul>

<div class="tab-content">
  <div class="active tab-pane">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post , :class => 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="control-group">
        <%= f.label :email, :class => 'control-label' %>
        <div class="controls">
          <%= f.email_field :email, :autofocus => true, :class => 'span5', :size => '32', :maxlength => '254' %>
        </div>
      </div>

      <div class="form-actions">
        <div><%= f.submit "Envie-me Instruções para recuperar a Senha" %></div>
      </div>
    <% end %>
  </div>
</div>

