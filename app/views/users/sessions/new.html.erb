<ul class="nav nav-tabs">
  <li class="active"><%= link_to "Logar", new_session_path(resource_name) %></li>
  <li><%= link_to "Cadastrar", new_registration_path(resource_name) %></li>
  <li><%= link_to "Esqueceu a Senha?", new_password_path(resource_name) %></li>
</ul>

<div class="tab-content">
  <div class="active tab-pane">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>

    <div class="control-group">
      <%= f.label "E-Mail", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, :autofocus => true, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "Senha", :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password, :class => 'text_field' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="control-group">
        <div class="controls"><%= f.check_box :remember_me%> <%= f.label "Lembrar-se" %></div>
      </div>
    <% end -%>

    <div class="form-actions">
      <div><%= f.submit "Entrar", :class => 'btn btn-primary' %></div>
    </div>

    <% end %>
  </div>
</div>
